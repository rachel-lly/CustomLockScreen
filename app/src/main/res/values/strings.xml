<resources>
    <string name="app_name">CustomLockScreen</string>

    <string name="drawer_top_text">CustomLockScreen</string>

    <string name="accept">确定</string>
    <string name="decline">取消</string>


    <style name="linear_item_text_behind_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/color_normal</item>
    </style>

    <style name="item_end_icon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>


    <style name="horizon_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line_color_gray</item>
    </style>

    <style name="vertical_line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_color_gray</item>
    </style>

    <style name="linear_item_icon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="icon_in_LinearLayout">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="header_layout_horizon_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.8dp</item>
        <item name="android:background">@color/line_color_gray</item>
    </style>
