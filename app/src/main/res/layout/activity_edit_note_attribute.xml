<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.EditNoteAttributeActivity"
    android:background="@color/color_background_gray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/edit_note_attribute_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/OverflowMenuStyle"
            app:title="编辑事件"
            />


        <include
            android:id="@+id/note_attribute_layout"
            layout="@layout/note_attribute_layout"
            android:layout_below="@+id/edit_note_attribute_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>


        <LinearLayout
            android:layout_below="@id/note_attribute_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            >

            <Button
                android:id="@+id/delete_note_sure"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="删除"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"
                android:background="@color/colorPrimaryDark"
                />

            <Button
                android:id="@+id/edit_note_sure"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="保存"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:background="@color/colorPrimaryDark"
                />


        </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>