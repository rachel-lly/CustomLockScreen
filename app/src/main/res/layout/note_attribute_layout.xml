<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>
        <import type="com.example.customlockscreen.util.TimeManager"/>
        <variable
            name="viewmodelchild"
            type="com.example.customlockscreen.viewmodel.LabelViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_background_gray">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/add_note_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:id="@+id/content_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_bg_gray"
                android:orientation="vertical"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/icon_in_LinearLayout"
                        android:src="@mipmap/note_text" />

                    <EditText
                        android:id="@+id/add_note_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="20dp"
                        android:text="@{viewmodelchild.label.text}"
                        android:textColor="@color/black"
                        android:theme="@style/MyEditText" />
                </LinearLayout>

                <View
                    style="@style/horizon_line"
                    android:layout_marginTop="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/icon_in_LinearLayout"
                        android:src="@mipmap/note_date" />

                    <TextView
                        style="@style/linear_item_text_behind_icon"
                        android:layout_gravity="bottom"
                        android:text="目标日" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="3dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="(未来日期为倒数，过去日期为正数)"
                        android:textColor="@color/color_normal"
                        android:textSize="10sp" />


                </LinearLayout>


                <TextView
                    android:id="@+id/add_note_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@{viewmodelchild.getDate(viewmodelchild.label.targetDate)}"
                    android:textColor="@color/text_colorPrimary"
                    android:textSize="14sp" />

                <View
                    style="@style/horizon_line"
                    android:layout_marginTop="8dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/sort_iv"
                        style="@style/linear_item_icon"
                        android:src="@mipmap/sort_note" />

                    <TextView
                        android:id="@+id/sort_text"
                        style="@style/linear_item_text_behind_icon"
                        android:layout_gravity="bottom"
                        android:layout_toEndOf="@id/sort_iv"
                        android:text="分类" />


                    <LinearLayout
                        android:id="@+id/choose_sort_note_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/choose_sort_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@{viewmodelchild.label.sortNote}"
                            android:textColor="@color/text_colorPrimary"
                            android:textSize="14sp" />

                        <ImageView

                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:src="@mipmap/choose_down" />


                    </LinearLayout>


                </RelativeLayout>

                <View
                    style="@style/horizon_line"
                    android:layout_marginTop="8dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/to_top_iv"
                        style="@style/linear_item_icon"
                        android:src="@mipmap/to_top" />

                    <TextView
                        style="@style/linear_item_text_behind_icon"
                        android:layout_toEndOf="@id/to_top_iv"
                        android:text="置顶" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/to_top_switch"
                        android:layout_width="55dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:checked="@{viewmodelchild.label.top}"
                        android:theme="@style/switchStyle" />
                </RelativeLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/end_time_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_note_card"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_bg_gray"
                >
                <RelativeLayout
                    android:id="@+id/end_time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"

                    >

                    <ImageView
                        android:id="@+id/end_time_iv"
                        android:src="@mipmap/end_time"
                        style="@style/linear_item_icon"
                        />

                    <TextView
                        android:id="@+id/end_time_text"
                        style="@style/linear_item_text_behind_icon"
                        android:layout_toEndOf="@id/end_time_iv"
                        android:text="结束时间"
                        />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/end_time_switch"
                        android:layout_width="55dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:checked="@{viewmodelchild.label.end}"
                        android:theme="@style/switchStyle" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/end_time_date_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:id="@+id/end_time_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="2021-09-9-星期三"
                        android:textColor="@color/text_colorPrimary"
                        android:textSize="14sp" />

                </LinearLayout>
            </RelativeLayout>



        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

</layout>