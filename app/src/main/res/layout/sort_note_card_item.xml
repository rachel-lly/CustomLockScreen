<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    ></layout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/item_pressed_state"

    >


    <RelativeLayout
        android:id="@+id/card_sort_note_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="30dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        >

        <ImageView
            android:id="@+id/sort_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/anniverity_color"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/sort_tx"
            style="@style/linear_item_text_behind_icon"
            android:text="纪念日"
            android:layout_toEndOf="@id/sort_icon"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>



    <View
        style="@style/horizon_line"
        android:layout_alignBottom="@+id/card_sort_note_layout"
        />


</RelativeLayout>